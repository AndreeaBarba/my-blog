<!DOCTYPE html>
<html>
  <head>
    <title>MyBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="sidebar">
      <% if !current_user %>
        <div id="button">
          <button class="button"><%= link_to 'Log in', new_session_path %></button>
          <button class="button"><%= link_to 'Sign up', new_user_path %></button>
        </div>
      <% end %>
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
      </ul>
    </div>

    <div class="main_content">
      <% if current_user %>
        <div class="buttons">
          <button class="button"><%= link_to "New post", new_post_path %></button>
          <button class="button"><%= link_to "Log out", logout_path %></button>
        </div>
      <% end %>
    </div>
    <% flash.each do |name, message| %>
      <%= content_tag(:div, message, class: "alert") %>
    <% end %>
    <%= yield %>
  </body>
</html>

